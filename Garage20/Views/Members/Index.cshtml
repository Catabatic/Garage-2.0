@model IEnumerable<Garage20.Models.Members>

@{
    ViewBag.Title = "Index";
}

<h2>Översiktsvy över medlemmar</h2>
<div class="well">

    @using (Html.BeginForm("Search", "Members", FormMethod.Get))
    {
        <p>Ange registreringsnummer för att söka en medlem</p>
        <div class="form-inline">
            <input name="Search" class="form-control" placeholder="Ange sökkriterie" type="text" />
            <input type="submit" class="btn btn-default" value="Sök" />
        </div>
        <div class="info infoTextWarning"><p>@ViewBag.Description</p></div>
    }
</div>
<p>
    @Html.ActionLink("Lägg till ny medlem", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LastName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PhoneNbr)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.FirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LastName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PhoneNbr)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.ActionLink("Redigera", "Edit", new { id=item.Id }) |
           <!-- @Html.ActionLink("Details", "Details", new { id=item.Id }) |-->
            @Html.ActionLink("Ta bort", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
