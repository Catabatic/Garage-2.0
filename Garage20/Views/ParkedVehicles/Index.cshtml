@model IEnumerable<Garage20.Models.ParkedVehicle>

@{
    ViewBag.Title = "Search";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Fordon</h2>

<h4>@ViewBag.Description</h4>

<p></p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.RegNr)
        </th>
        <th>
            @Html.DisplayName("Fordonstyp")
        </th>
        <th>
            @Html.DisplayName("Tid sen parkering")
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.RegNr)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VehicleType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CheckInTime)
            </td>
            <td>
                @Html.ActionLink("Kvitto", "Receipt", new { id = item.Id }) |
                @Html.ActionLink("Avsluta parkering", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
