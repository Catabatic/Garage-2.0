@model IEnumerable<Garage20.Models.ParkedVehicle>

@{
    ViewBag.Title = "Search";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Incheckade fordon</h2>

<p>@ViewBag.Description</p>

<p></p>
<div class="well">
    @using (Html.BeginForm("Search", "ParkedVehicles", FormMethod.Get))
    {
        <p>Ange registreringsnummer för att söka på ett specifikt fordon</p>
     
           <input name="Search" class="form-control form-inline" placeholder="Ange registreringsnummer" type="text" />
            <input type="submit" class="btn btn-default form-inline" value="Sök" />
       
    }
</div>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.RegNr)
        </th>
        <th>
            @Html.DisplayName("Fordonstyp")
        </th>
        <th>
            @Html.DisplayName("Tid sen parkering")
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.RegNr)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VehicleType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CheckInTime)
            </td>
            <td>
                @Html.ActionLink("Detaljer", "Details", new { id = item.Id}) |
            </td>
        </tr>
    }

</table>
