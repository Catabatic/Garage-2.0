@model IEnumerable<Garage20.Models.ParkedVehicle>

@{
    ViewBag.Title = "Search";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Sök fordon</h2>

<div class="well">
 
    @using (Html.BeginForm("Search", "ParkedVehicles", FormMethod.Get))
    {
        <p>Ange registreringsnummer för att söka på ett specifikt fordon</p>
        <div class="form-inline">
            <!--Registration Number Textfield:-->
            <input name="Search" class="form-control" placeholder="Registreringsnummer" type="text" /><br>           
            <!--Vehicule Type Textfield:(Change to DRopdown menu)-->
            <!--input name="Vehicule Type" class="form-control" placeholder="Vehicule Type" type="text" /--><br>                     
            @using (Html.BeginForm())
            {
                @Html.DropDownList("VehicleTypeId", null, htmlAttributes: new { @class = "form-control" })
            }
            <!--Search Button:-->
            <input type="submit" class="btn btn-default" value="Sök" />
        </div>
        <div class="info infoTextWarning"><p>@ViewBag.Description</p></div>
    }
</div>
<!--Query Results-->
<h4>Incheckade fordon</h4>
<table class="table">
    <tr>        
        
        <th>
            @Html.DisplayName("Ägare")<!--Owner-->
        </th>
        <th>
            @Html.DisplayName("Fordonstype") <!--Vehicule Type-->
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RegNr)
        </th>
        <th>
            @Html.DisplayName("ParkTid") <!--Check In-->
        </th>
        
    </tr>

    @foreach (var item in Model)
    {
        <tr>           
            <!--<td>
                @*@Html.DisplayFor(modelItem => item.Email)*@
            </td>-->
            <td>
                @Html.DisplayFor(modelItem => item.VehicleType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RegNr)
            </td>            
            <td>
                @Html.DisplayFor(modelItem => item.CheckInTime)
            </td>            
            <!--
            <td>
               @*@Html.ActionLink("Detaljer", "Details", new { id = item.Id})*@ 
            </td>
            -->
        </tr>
    }

</table>
