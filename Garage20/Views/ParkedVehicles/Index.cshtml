@model IEnumerable<Garage20.Models.ParkedVehicle>

@{
    ViewBag.Title = "Search";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Incheckade fordon</h2>

<h4>@ViewBag.Description</h4>

<p></p>
@using (Html.BeginForm("Search", "ParkedVehicles", FormMethod.Get))
{
    <p>Ange registreringsnummer för fordonet du vill checka ut</p>
            <ul class="nav navbar-nav">
                <li><input name="Search" class="form-control" placeholder="Ange registreringsnummer" type="text" /></li>
                <li><input type="submit" class="btn btn-default" value="Checka ut" /></li>
            </ul>
}
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.RegNr)
        </th>
        <th>
            @Html.DisplayName("Fordonstyp")
        </th>
        <th>
            @Html.DisplayName("Tid sen parkering")
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.RegNr)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VehicleType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CheckInTime)
            </td>
            <td>
                @Html.ActionLink("Detaljer", "Details", new { id = item.Id}) |
            </td>
        </tr>
    }

</table>
