@model IEnumerable<Garage20.Models.ParkedVehicle>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<div class="row">
    <div class="col-lg-3">
        @using (Html.BeginForm("Search", "ParkedVehicles", FormMethod.Get))
        {
            <ul class="nav navbar-nav">
                <li><input name="Search" placeholder="Search for RegNr" type="text"/></li>
                <li><input type="submit" value="Submit"/></li>
            </ul>
        }
    </div>
    <div class="col-lg-3">
        @using (Html.BeginForm("Verify", "ParkedVehicles", FormMethod.Get))
        {
            <ul class="nav navbar-nav">
                <li><input name="Verify" placeholder="Unpark vehicle with verification" type="text" /></li>
                <li><input type="submit" value="Submit" /></li>
            </ul>
        }
    </div>
</div>

<h3>@ViewBag.Description</h3>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.RegNr)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Color)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Brand)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Model)
        </th>
        <th>
            @Html.DisplayName("Wheels")
        </th>
        <th>
            @Html.DisplayName("Vehicle Type")
        </th>
        <th>
            @Html.DisplayName("Parking Time")
        </th>

        <th>
            @Html.DisplayNameFor(model => model.Verification)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.RegNr)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Color)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Brand)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Model)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.WheelsAmount)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.VehicleType)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CheckInTime)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Verification)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Receipt", "Receipt", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
